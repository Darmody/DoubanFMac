{
  "name": "DoubanFMac",
  "productName": "豆瓣FMac",
  "version": "2.0.0-beta-1",
  "description": "豆瓣FM for mac",
  "main": "./main.js",
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "scripts": {
    "dev-server": "./bin/dev-server",
    "start": "./bin/electron",
    "flow": "./node_modules/.bin/flow",
    "lint": "./node_modules/.bin/eslint ./src",
    "test": "./node_modules/.bin/jest --coverage",
    "check": "yarn run lint && yarn run flow && yarn test",
    "bundle": "NODE_ENV=production ./bin/bundle",
    "pack": "./bin/pack",
    "dist": "./bin/dist"
  },
  "build": {
    "mac": {
      "type": "development"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darmody/DoubanFMac.git"
  },
  "author": {
    "name": "Darmody",
    "email": "eterlf41@gmail.com",
    "url": "https://github.com/darmody"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/darmody/DoubanFMac/issues"
  },
  "keywords": [
    "douban fm",
    "mac app",
    "electron",
    "react",
    "redux"
  ],
  "homepage": "https://github.com/darmody/DoubanFMac#readme",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "babel-preset-latest": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "coveralls": "^2.12.0",
    "css-loader": "^0.27.3",
    "electron": "^1.6.2",
    "electron-builder": "^16.8.2",
    "enzyme": "^2.7.1",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-flowtype": "^2.30.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "file-loader": "^0.10.1",
    "flow-bin": "^0.41.0",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "next",
    "react-test-renderer": "^15.4.2",
    "redux-logger": "^2.10.1",
    "redux-mock-store": "^1.2.2",
    "style-loader": "^0.14.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-dashboard": "^0.3.0",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "humps": "^2.0.0",
    "node-machine-id": "^1.1.4",
    "normalize.css": "^5.0.0",
    "normalizr": "^3.2.2",
    "ramda": "^0.23.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-modal": "^1.7.3",
    "react-redux": "^5.0.3",
    "redux": "^3.6.0",
    "redux-form": "^6.5.0",
    "redux-localstorage": "^0.4.1",
    "redux-observable": "^0.14.1",
    "rxjs": "^5.2.0",
    "seamless-immutable": "^7.1.1",
    "styled-components": "^1.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "moduleRoots": [
    "src"
  ]
}
